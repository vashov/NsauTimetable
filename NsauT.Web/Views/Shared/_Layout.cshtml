@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/simple-css.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-area="" asp-controller="home" asp-action="index" class="nav-link">Главная</a>
                </li>
                <li class="nav-item">
                    <a asp-area="manage" asp-controller="timetable" asp-action="timetables" class="nav-link">Расписание</a>
                </li>
            </ul>
            <div class="nav navbar-nav navbar-right">
                <form class="form-inline">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-area="" asp-controller="account" asp-action="logout" class="btn btn-sm btn-outline-danger">Выйти</a>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="account" asp-action="login" class="btn btn-sm btn-outline-primary">Войти</a>
                    }
                </form>
            </div>
        </div>
    </nav>
    <div class="card-body">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false);
</body>
</html>
