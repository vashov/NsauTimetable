@model NsauT.Web.Models.AccountController.SignInUserViewModel
@{
    ViewData["Title"] = "Вход";
}

<h4>Вход в систему</h4>

<div class="row">
    <form class="col-4" asp-action="login" asp-route-returnUrl="@Model?.ReturnUrl" method="post">
        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label for="Login">Логин</label>
            <input asp-for="@Model.Login" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Password">Пароль</label>
            <input asp-for="@Model.Password" class="form-control" />
        </div>

        <div class="form-check">
            <input asp-for="@Model.RememberMe" class="form-check-input" />
            <label for="RemebmerMe" class="form-check-label">Запомнить меня</label>
        </div>

        <input type="submit" class="btn btn-primary mt-3" value="Войти" />
    </form>
</div>
